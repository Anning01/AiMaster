{
    "manifest_version": 3,
    "name": "AiMaster",
    "version": "1.0",
    "description": "AI大师 - 新闻文章智能改写与发布助手",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://localhost:*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": [
                "crawlers/schema.js",
                "crawlers/formatter.js",
                "crawlers/toutiao.js",
                "crawlers/baidu.js",
                "crawlers/pengpai.js",
                "crawlers/sohu.js",
                "crawlers/tencent.js",
                "crawlers/netease.js",
                "crawlers/chinadaily.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
